<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
   "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<!-- Struts config for image viewer tab in webice -->

<struts-config>

  <!-- ========== Form Bean Definitions =================================== -->

  <form-beans>
        <form-bean name="loadImageForm" type="webice.actions.image.LoadImageForm">
            <form-property name="file" type="java.lang.String"/>
		</form-bean>
  </form-beans>



  <!-- ========== Action Mapping Definitions ============================== -->
  <action-mappings>

        <action
            path="/showImageViewer"
            type="webice.actions.image.ShowImageViewerAction"
            scope="request"
            validate="false">
            <forward name="image" path="/image_showImageViewer.do" />
            <forward name="screening" path="/sil_showImageViewer.do" />
            <forward name="autoindex" path="/showImage.do" />
	</action>
	
	<action
		path="/showImageTab"
		type="webice.actions.image.ShowImageTabAction"
		scope="request"
		validate="false">
		<forward name="error" path="/pages/showError.jsp"/>
		<forward name="success" path="/top.do"/>
	</action>

        <action
            path="/image_showImageViewer"
            type="org.apache.struts.actions.ForwardAction"
            parameter="/pages/image/imageViewer.jsp"/>


        <action
            path="/showImage"
            type="org.apache.struts.actions.ForwardAction"
            parameter="/pages/image/image.jsp"/>


        <action
            path="/ImageInfoChangeTab"
            type="webice.actions.image.ImageInfoChangeTabAction"
            scope="request"
            validate="false">
            <forward name="header" path="/pages/image/imageHeader.jsp" />
            <forward name="spotfinder1" path="/pages/image/imageSpotFinder.jsp" />
            <forward name="spotfinder" path="/pages/image/imageViewer.jsp" />
            <forward name="crystal" path="/pages/image/imageCrystal.jsp" />
            <forward name="statistics" path="/pages/image/imageStatistics.jsp" />
            <forward name="default" path="/pages/image/imageHeader.jsp" />
		</action>

        <action
            path="/SelectImageInfoDisplay"
            type="webice.actions.image.SelectImageInfoDisplayAction"
            scope="request"
            validate="false">
            <forward name="header" path="/pages/image/imageHeader.jsp" />
            <forward name="spotfinder" path="/pages/image/imageSpotFinder.jsp" />
            <forward name="crystal" path="/pages/image/imageCrystal.jsp" />
            <forward name="default" path="/pages/image/imageHeader.jsp" />
		</action>

        <action
            path="/panImage"
            type="webice.actions.image.PanImageAction"
            scope="request"
            validate="false">
            <forward name="success" path="/pages/image/image.jsp" />
		</action>

        <action
            path="/panThumbnail"
            type="webice.actions.image.PanThumbnailAction"
            scope="request"
            validate="false">
            <forward name="success" path="/pages/image/image.jsp" />
		</action>

        <action
            path="/adjustImage"
            type="webice.actions.image.AdjustImageAction"
            scope="request"
            validate="false">
            <forward name="success" path="/showImage.do" />
            <forward name="resize" path="/showImageViewer.do" />
	</action>

        <action
            path="/image_adjustImage"
            type="webice.actions.image.AdjustImageAction"
            scope="request"
            validate="false">
            <forward name="success" path="/showImage.do" />
            <forward name="resize" path="/showImageViewer.do" />
	</action>

        <action
            path="/loadImageAndDir"
            type="webice.actions.image.LoadImageAction"
            name="loadImageForm"
            scope="request"
            validate="false">
            <forward name="success" path="/pages/image/imageAndFileViewer.jsp" />
            <forward name="image" path="/pages/image/imageAndFileViewer.jsp" />
            <forward name="screening" path="/pages/screening/imageAndSilViewer.jsp" />
	</action>

        <action
            path="/loadImage"
            type="webice.actions.image.LoadImageAction"
            name="loadImageForm"
            scope="request"
            validate="false">
            <forward name="success" path="/showImageViewer.do" />
	</action>

        <action
            path="/image_loadRelativeImage"
            type="webice.actions.image.LoadRelativeImageAction"
            name="loadImageForm"
            scope="request"
            validate="false">
            <forward name="success" path="/showImageViewer.do" />
	</action>

        <action
            path="/loadRelativeImage"
            type="webice.actions.image.LoadRelativeImageAction"
            name="loadImageForm"
            scope="request"
            validate="false">
            <forward name="success" path="/showImageViewer.do" />
	</action>

        <action
            path="/loadLastImageCollected"
            type="webice.actions.image.LoadLastImageCollectedAction"
            scope="request"
            validate="false">
            <forward name="success" path="/showImageViewer.do" />
	</action>

        <action
            path="/showFileBrowser"
            type="webice.actions.image.ShowFileBrowserAction"
            scope="request"
            validate="false">
            <forward name="success" path="/pages/image/fileBrowser.jsp" />
            <forward name="error" path="/pages/image/fileBrowser.jsp" />
	</action>

        <action
            path="/changeDirectory"
            type="webice.actions.image.ChangeDirectoryAction"
            name="loadImageForm"
            scope="request"
            validate="false">
            <forward name="success" path="/pages/image/fileBrowser.jsp" />
		</action>

        <action
            path="/reloadDirectory"
            type="webice.actions.image.ReloadDirectoryAction"
            scope="request"
            validate="false">
            <forward name="success" path="/pages/image/fileBrowser.jsp" />
		</action>

        <action
            path="/showSpots"
            type="webice.actions.image.ShowSpotsAction"
            scope="request"
            validate="false">
            <forward name="success" path="/showImageViewer.do" />
	</action>

  </action-mappings>


  <!-- ========== Controller Configuration ================================ -->

  <controller>
    <!-- The "input" parameter on "action" elements is the name of a
         local or global "forward" rather than a module-relative path -->
    <set-property property="inputForward" value="true"/>
  </controller>


</struts-config>
