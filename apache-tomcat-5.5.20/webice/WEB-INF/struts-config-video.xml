<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
   "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<!-- Struts config for video tab in webice -->

<struts-config>

  <!-- ========== Form Bean Definitions =================================== -->

  <form-beans>
  </form-beans>



  <!-- ========== Action Mapping Definitions ============================== -->
  <action-mappings>

        <action
            path="/showVideo"
            type="org.apache.struts.actions.ForwardAction"
            parameter="/pages/video/main.jsp"/>
	    
        <action
            path="/showVideoNav"
            type="org.apache.struts.actions.ForwardAction"
            parameter="/pages/video/nav.jsp"/>

        <action
            path="/showVideoMain"
            type="org.apache.struts.actions.ForwardAction"
            parameter="/pages/video/main.jsp"/>

        <action
            path="/showVideoImage"
            type="org.apache.struts.actions.ForwardAction"
            parameter="/pages/video/videoImage.jsp"/>

         <action
            path="/ChangePreset"
            type="webice.actions.video.ChangePresetAction"
            scope="request"
            validate="false">
            <forward name="success" path="/pages/video/main.jsp" />
            <forward name="error" path="/pages/video/main.jsp" />
	</action>

         <action
            path="/selectCamera"
            type="webice.actions.video.SelectCameraAction"
            scope="request"
            validate="false">
            <forward name="success" path="/top.do" />
            <forward name="error" path="/top.do" />
	</action>

  </action-mappings>


  <!-- ========== Controller Configuration ================================ -->

  <controller>
    <!-- The "input" parameter on "action" elements is the name of a
         local or global "forward" rather than a module-relative path -->
    <set-property property="inputForward" value="true"/>
  </controller>


</struts-config>
