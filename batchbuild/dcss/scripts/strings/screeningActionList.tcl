#when DCSS re-start, we want to make sure that first element is 0
#which means whether the operatin is running.
proc STRING_initialize {{reuse 0}} {
    variable STRING
    set STRING [lreplace $STRING 0 0 0]

    if {!$reuse} {
        registerAbortCallback STRING_abort
    }
}


proc STRING_configure { args } {
	#simply return whatever is given us without any error checking
	return $args
}

proc STRING_abort { } {
    STRING_initialize 1
}
