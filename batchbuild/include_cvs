########################################################
# List of targets for checking out cvs projects
########################################################

co_xos:
	@cd .. && $(CVSCOMMAND) co $(CVSTAG) xos
	
co_logging:
	@cd .. && $(CVSCOMMAND) co $(CVSTAG) logging
	
co_xos_cpp:
	@cd .. && $(CVSCOMMAND) co $(CVSTAG) xos_cpp
	
co_http_cpp:
	@cd .. && $(CVSCOMMAND) co $(CVSTAG) http_cpp
	
