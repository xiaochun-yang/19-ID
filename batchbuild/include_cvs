########################################################
# Compiling each cvs prject
########################################################
build_xos:
	@cd ../xos && ${MAKE}
	
build_logging:
	@cd ../logging  && ${MAKE}
	
build_xos_cpp:
	@cd ../xos_cpp && ${MAKE}

build_http_cpp:
	@cd ../http_cpp && ${MAKE}

build_auth:
	@cd ../auth && ${MAKE}

build_auth_client:
	@cd ../auth_client && ${MAKE}

build_jpegsoc:
	@cd ../jpegsoc && ${MAKE}

build_dali:
ifeq ($(MACHINE),linux)
	@echo "Building dali for linux"
	@cd ../dali/unix && ${MAKE}
	@cd ../dali/unix && ${MAKE} install
else
	@echo "Machine is not linux"
endif

build_cbf:
	@cd ../cbf && ${MAKE} all

build_diffimage:
	@cd ../diffimage && ${MAKE}

build_newmat10:
	@cd ../newmat10 && ${MAKE}

build_tcl_clibs:
	@cd ../tcl_clibs && ${MAKE}

build_dcsconfig:
	@cd ../dcsconfig && ${MAKE}

build_dcsmsg:
	@cd ../dcsmsg && ${MAKE}


