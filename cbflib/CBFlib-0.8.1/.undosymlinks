# Usage ./.undosymlinks

for file in index.html CBFlib.tar.gz template_adscquantum315_3072x3072.cbf \
  template_adscquantum4_2304x2304.cbf \
  template_mar345_2300x2300.cbf template_pilatus6m_2463x2527.cbf gpl.txt lgpl.txt
do
  rm -rf $file
done

for file in *
do
  if [ -d "$file" ] ; then
    if [ -e "$file/.undosymlinks" ] ; then
      (cd "$file"; sh -c "./.undosymlinks")
    fi
  fi
done
