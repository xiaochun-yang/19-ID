# Usage ./.undosymlinks

for file in  cif_img.dic cif_img.html cif_img_1_3_2.html \
  cif_img_1.5.dic cif_img_1.5.html cif_img_1.5.4.html 
do
  rm -rf $file
done

for file in *
do
  if [ -d "$file" ] ; then
    if [ -e "$file/.undosymlinks" ] ; then
      (cd "$file"; sh -c "./.undosymlinks")
    fi
  fi
done
