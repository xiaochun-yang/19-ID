#
#	CCD software system.
#
#   NOTES:
#
#      Change CCDHOME to the root of the ccd_dist distribution.
#
#      Change:
#
#                     DCHOSTNAME	to the name of the computer which
#					runs all of the linux software.
#			MAKE SURE IT AGREES WITH WHAT IS RETURNED FROM THE
#					hostname
#			COMMAND OR THERE WILL BE PROBLEMS!!
#
#                    CCD_DCHOSTNAME	to the linux pc hostname. 
#		     CCD_DTHOSTNAME	to the framegrabber PC hostname
#		     CCD_DTDHOSTNAME    to the framegrabber PC hostname
#		     CCD_BLHOSTNAME	to the hostname running Yang's bl conrol program.
#		     CCD_DAHOSTNAME	to the linux pc hostname.
#		     CCD_STHOSTNAME	to the linux pc hostname.
#		     CCD_XFHOSTNAME	to the linux pc hostname.
#		     CCD_CONHOSTNAME	to the linux pc hosthame.
#
#			MAKE SURE THE LINUX PC HOSTNAME AGREES WITH WHAT IS RETURNED 
#			FROM THE
#					hostname
#
#			COMMAND ON THAT MACHINE OR THERE WILL BE PROBLEMS!!
#
#
setenv	CCDHOME			/usr/local/dcs/ccd_dist
setenv	USE_STRIPS		1
#----------------------------------------------------
# For CCD-specific Denzo (v 1.5.5) and needed aliases
#----------------------------------------------------
#
setenv	CCD_COMMUNICATION 	"tcp-ip"
#
#	Program elements, their hosts and port numbers.
#
setenv	CCD_DCSERVER		ccd_dc_api
setenv	CCD_DCHOSTNAME		yangxc
setenv	CCD_DCPORT		8040
#
setenv	CCD_DTSERVER		det_api
setenv	CCD_DTHOSTNAME		x4hhmi6.nsls.bnl.gov
setenv	CCD_DTPORT		8041
#
setenv	CCD_DTDSERVER		det_api
setenv	CCD_DTDHOSTNAME		x4hhmi6.nsls.bnl.gov
setenv	CCD_DTDPORT		8042
#
#setenv	CCD_BLSERVER		ccd_bl_gen_fast
#setenv	CCD_BLHOSTNAME		x4hhmi2.nsls.bnl.gov
#setenv	CCD_BLPORT		8043
#
setenv	CCD_DASERVER		ccd_daemon
setenv	CCD_DAHOSTNAME		yangxc
setenv	CCD_DAPORT		8044
#
setenv	CCD_STSERVER		ccd_status
setenv	CCD_STHOSTNAME		yangxc
setenv	CCD_STPORT		8045
#
setenv	CCD_XFSERVER		ccd_xform_new_api
setenv	CCD_XFHOSTNAME		yangxc
setenv	CCD_XFPORT		8046
#
#	control and view have no host or port.
#
setenv	CCD_CONSERVER		adx_ccd_control
setenv	CCD_CONHOSTNAME		yangxc
setenv	CCD_VIEWSERVER		adxv
#
#  Details for the 2x2:
#
setenv	CCD_N_CTRL		4
setenv	CCD_U_CTRL		"1 1 1 1"
setenv	CCD_M_ROTATE		"180 270 90 0"
#
#	Status file
#
setenv	CCD_STATUS_FILE		$HOME/ccd_status
setenv	MARSTATUSFILE		$HOME/ccd_status
#
#	Log file for ccd_dc (as opposed to the standard output)
#
setenv	CCD_DC_LOCAL_LOG	$HOME/ccd_dc_local_log
#
#	Log file for ccd_dc (as opposed to the standard output)
#
setenv	CCD_BL_LOCAL_LOG	$HOME/ccd_bl_local_log
#
#	Where the Raw ccd files are placed (from ccd_det's point of view).
#
setenv	CCDSCANDIR		"e:\tmp\"
#
#	Where the Raw ccd files are placed (from ccd_xform's point of view).
#
setenv	CCDSCANDIR_EXPORT	/CCD1/e/tmp
#
#	The ccd config file (currently the same as mardc).
#
setenv	CCD_DC_CONFIG		$CCDHOME/tables_api_418/config_ccd
#
#	The mardc config file.  Used when the base is part of data collection.
#
setenv	MARCONFIGFILE		$CCDHOME/tables_api_418/config
#
setenv	MARCOLLECTFILE		$CCDHOME/tmp/marcollect
#
setenv	XFORMSTATUSFILE		$CCDHOME/tmp/xf_status
#
setenv	LOG_DC_FILE		ccd_dc.log
setenv	LOG_BL_FILE		ccd_bl.log
setenv	LOG_XF_FILE		ccd_xform.log
setenv	LOG_ST_FILE		ccd_status.log
setenv	LOG_CON_FILE		adx_control.log
#
# Generic Background file for the transform process
#
setenv	CCD_GENERICBGND		$CCDHOME/corr_tables/bgnd.gen
#
# For use of the multiwire system hardware.
#
setenv XTAL_GONIOFILE	$CCDHOME/tables/goniostat.
setenv XTAL_GONIOPARAM	$CCDHOME/tables/gonioparam
setenv XTAL_CAMACDEV	/dev/multiwire
setenv XTAL_MOTORDEV	/dev/ttyts2
setenv XTAL_MOTFILE	$CCDHOME/tables/motors.
setenv MARBEAMLINEFILE	$CCDHOME/tables/marbeamlinefile
setenv CCD_KAPPA_POSITIONS      $CCDHOME/tables_api_418/kappa_positions
#setenv CCD_KAPPA_TTY            /dev/ttyd1
setenv CCD_KAPPA_TTY            /dev/cua1
#
#  Transform code.
#
setenv CCD_NONUNF	$CCDHOME/tables_api_418/NONUNF
setenv CCD_CALFIL	$CCDHOME/tables_api_418/CALFIL
setenv CCD_POSTNUF      $CCDHOME/tables_api_418/POSTNUF
setenv CCD_X_INT        $CCDHOME/tables_api_418/COMBINED.x_int
setenv CCD_Y_INT        $CCDHOME/tables_api_418/COMBINED.y_int
setenv CCD_CALPAR       $CCDHOME/tables_api_418/COMBINED.calpar
setenv GUI_EDITOR		vi
#
setenv CCD_RAW_SATURATION	50000
exit
